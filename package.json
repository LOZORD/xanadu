{
  "name": "xanadu",
  "version": "0.0.3",
  "description": "A game of precarious alliances and breaking fast on honeydew.",
  "main": "src/main.js",
  "directories": {
    "doc": "docs",
    "lib": "src",
    "bin": "dist"
  },
  "scripts": {
    "lint": "tslint src/*.ts src/**/*.ts",
    "build": "tsc",
    "clean": "rm -rf dist/",
    "test:only": "node dist/test.js",
    "test:quick": "npm run build && npm run test:only",
    "test:cover": "istanbul cover \"dist/test.js\" --include-all-sources --root \"dist\" -x \"test.js\" -x \"**/*Spec.js\"",
    "test:full": "npm run clean && npm run lint && npm run build && npm run test:cover",
    "test": "npm run test:full",
    "launch": "node dist/main.js --with-defaults --port 3000",
    "launch:debug": "node dist/main.js --with-defaults --port 3000 --debug",
    "now": "npm run test:full && npm run launch",
    "postinstall": "david"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LOZORD/xanadu.git"
  },
  "keywords": [
    "game",
    "multiuser dungeon"
  ],
  "author": {
    "name": "Leo Rudberg",
    "url": "http://github.com/LOZORD/me#readme"
  },
  "contributors": [
    {
      "name": "Zach Thomae",
      "url": "https://github.com/zthomae"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LOZORD/xanadu/issues"
  },
  "homepage": "https://github.com/LOZORD/xanadu#readme",
  "dependencies": {
    "@types/bootstrap": "^3.3.32",
    "@types/chance": "^0.7.30",
    "@types/es6-promise": "0.0.32",
    "@types/express": "^4.0.33",
    "@types/express-serve-static-core": "^4.0.37",
    "@types/jquery": "^2.0.33",
    "@types/lodash": "^4.14.37",
    "@types/node": "^6.0.45",
    "@types/serve-static": "^1.7.31",
    "@types/socket.io": "^1.4.27",
    "@types/socket.io-client": "^1.4.27",
    "@types/winston": "0.0.30",
    "bootstrap": "^3.3.6",
    "chance": "^1.0.4",
    "es6-promise": "^4.0.5",
    "express": "^4.13.4",
    "jquery": "^3.1.1",
    "lodash": "^4.1.0",
    "socket.io": "^1.4.5",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/jsdom": "^2.0.29",
    "@types/mocha": "^2.2.32",
    "@types/sinon": "^1.16.31",
    "chai": "^3.5.0",
    "david": "^9.0.0",
    "istanbul": "^0.4.4",
    "jsdom": "^9.4.1",
    "mocha": "^3.1.2",
    "sinon": "^1.17.6",
    "tslint": "^4.0.0",
    "typescript": "^2.0.6"
  }
}
