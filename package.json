{
  "name": "xanadu",
  "version": "0.0.3",
  "description": "A game of precarious alliances and breaking fast on honeydew.",
  "main": "src/main.js",
  "directories": {
    "doc": "docs",
    "lib": "src",
    "bin": "dist"
  },
  "scripts": {
    "lint": "node node_modules/tslint/bin/tslint src/**/*.ts",
    "build": "node node_modules/typescript/bin/tsc",
    "clean": "rm -rf dist/",
    "test:only": "node dist/test.js",
    "test:quick": "npm run build && npm run test:only",
    "test:cover": "node node_modules/istanbul/lib/cli.js cover --include-all-sources --root 'dist' -x 'test.js' -x '*Spec.js' 'dist/test.js'",
    "test:full": "npm run clean && npm run lint && npm run build && npm run test:cover",
    "test": "npm run test:cover",
    "launch": "node dist/main.js --with-defaults",
    "now": "npm run test:full && npm run launch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LOZORD/xanadu.git"
  },
  "keywords": [
    "game",
    "multiuser dungeon"
  ],
  "author": {
    "name": "Leo Rudberg",
    "url": "http://github.com/LOZORD/me#readme"
  },
  "contributors": [
    {
      "name": "Zach Thomae",
      "url": "https://github.com/zthomae"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LOZORD/xanadu/issues"
  },
  "homepage": "https://github.com/LOZORD/xanadu#readme",
  "dependencies": {
    "bootstrap": "^3.3.6",
    "es6-promise": "^3.2.1",
    "express": "^4.13.4",
    "jquery": "^2.2.0",
    "lodash": "^4.1.0",
    "socket.io": "^1.4.5"
  },
  "devDependencies": {
    "arrow-mocha": "^1.0.1",
    "chai": "^3.5.0",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "tslint": "^3.13.0",
    "typescript": "^1.8.10",
    "typings": "^1.3.1"
  }
}
