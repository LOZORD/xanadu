{
  "name": "xanadu",
  "version": "0.0.3",
  "description": "A game of precarious alliances and breaking fast on honeydew.",
  "main": "src/main.js",
  "directories": {
    "doc": "docs",
    "lib": "src",
    "bin": "dist"
  },
  "scripts": {
    "lint": "node_modules/eslint/bin/eslint.js src",
    "test": "node_modules/mocha/bin/mocha ./dist/**/*Spec.js",
    "build": "node_modules/babel-cli/bin/babel.js src -D -d dist",
    "lb": "npm run lint && npm run build",
    "launch": "echo \"Open localhost:3000\" && node dist/main.js",
    "now": "npm run lint && npm run test && npm run build && npm run launch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LOZORD/xanadu.git"
  },
  "keywords": [
    "game",
    "multiuser dungeon"
  ],
  "author": "Leo Rudberg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LOZORD/xanadu/issues"
  },
  "homepage": "https://github.com/LOZORD/xanadu#readme",
  "dependencies": {
    "bootstrap": "^3.3.6",
    "express": "^4.13.4",
    "fixed-2d-array": "^1.2.0",
    "jquery": "^2.2.0",
    "lodash": "^4.1.0",
    "random-seed": "^0.3.0",
    "socket.io": "^1.4.5"
  },
  "devDependencies": {
    "babel-cli": ">=6.6.5",
    "babel-eslint": "^6.0.2",
    "babel-preset-es2015": ">=6.6.0",
    "babel-register": ">=6.4.2",
    "chai": "^3.5.0",
    "eslint": "^2.6.0",
    "mocha": "^2.5.3"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "mocha": true,
      "node": true,
      "jquery": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 0,
      "no-constant-condition": 1
    }
  }
}
